# Этап 1: сборка фронта
FROM node:20-alpine AS build

WORKDIR /app

COPY package.json package-lock.json ./
RUN npm install

COPY . .
RUN npm run build

# Этап 2: nginx с продакшн-сборкой
FROM nginx:alpine

# Копируем production nginx конфиг (если есть свой — смонтируй его)
COPY /src/nginx/nginx.frontend.conf /etc/nginx/nginx.conf

# Кладём собранную React-сборку в nginx root
COPY --from=build /app/build /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
